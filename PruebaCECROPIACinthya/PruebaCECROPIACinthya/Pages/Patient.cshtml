@page
@using PruebaCECROPIACinthya.Models @*namespace*@
@model PatientModel

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


<div class="container">
    <h3>Add Patient</h3>
    <hr />
    <br />
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.ID"></label>
                <input asp-for="Patient.ID" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.ID"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.FirstName"></label>
                <input asp-for="Patient.FirstName" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.FirstName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.LastName"></label>
                <input asp-for="Patient.LastName" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.LastName"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.DateBirth"></label>
                <input asp-for="Patient.DateBirth" cl class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.DateBirth"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.Nationality"></label>
                <input asp-for="Patient.Nationality" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.Nationality"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.Diseases"></label>
                <input asp-for="Patient.Diseases" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.Diseases"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.PhoneNumber"></label>
                <input asp-for="Patient.PhoneNumber" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.PhoneNumber"></span>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4">
                <label asp-for="Patient.BloodType"></label>
                <input asp-for="Patient.BloodType" class="form-control" />
                <span class="alert-danger" asp-validation-for="Patient.BloodType"></span>
            </div>
        </div>

        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/allpatient">Cancel</a>
    </form>
</div>